<UserControl x:Class="Taskish.Controls.GetStarted"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Taskish.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Name="this">
    <StackPanel>
        <Image Source="/Assets/Images/tasks.png" Stretch="Uniform" Width="100" Height="100" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Text, ElementName=this}" LineHeight="20" TextAlignment="Center" LineStackingStrategy="BlockLineHeight" Foreground="Black" FontSize="22" FontFamily="Gabriola" FontWeight="Bold" Margin="0 15 0 0" HorizontalAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
